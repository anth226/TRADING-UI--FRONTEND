{
  "name": "option-blitz",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "babel-loader": "8.1.0",
    "webpack": "4.44.2"
  },
  "scripts": {
    "lint": "yarn eslint . --cache --fix --ext js,jsx,ts,tsx && :",
    "tsc": "yarn lerna run tsc && :",
    "start:client": "yarn lerna run start:client",
    "build:client": "yarn lerna run build:client",
    "storybook": "start-storybook -p 6006 -s packages/client/public",
    "fontello": "bash ./fontello.sh",
    "fontello:open": "fontello-cli --config packages/libs/assets/fonts/fontello/config.json open"
  },
  "engines": {
    "node": "<=14.17.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint",
      "yarn tsc"
    ]
  },
  "dependencies": {
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.3.7",
    "@storybook/addon-knobs": "^6.3.0",
    "@storybook/addon-viewport": "^6.3.7",
    "@storybook/react": "^6.3.7",
    "@types/node": "12.0.0",
    "css-loader": "5.2.4",
    "fontello-cli": "0.6.2",
    "husky": "4.3.0",
    "lerna": "4.0.0",
    "lint-staged": "10.4.0",
    "node-sass": "6.0.1",
    "plop": "2.7.4",
    "react-docgen-typescript-loader": "3.7.2",
    "react-docgen-typescript-webpack-plugin": "1.1.0",
    "resolve-url-loader": "4.0.0",
    "sass-loader": "10.1.1",
    "storybook-addon-jsx": "7.3.12",
    "awesome-typescript-loader": "5.2.1",
    "style-loader": "^2.0.0"
  }
}
